<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imagePreview"
        android:layout_width="380dp"
        android:layout_height="255dp"
        android:background="#FFFFFF"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/placeholder"
        tools:srcCompat="@drawable/placeholder" />

    <TextView
        android:id="@+id/textInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="Take or upload a picture and get a prediction!"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@+id/imagePreview"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:paddingVertical="10dp"
        android:text="Take Photo"
        android:layout_below="@+id/textInstructions"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/buttonUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:paddingVertical="10dp"
        android:text="Upload Photo"
        android:layout_below="@+id/buttonCamera"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/buttonPredict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:paddingVertical="10dp"
        android:text="Get Photo Prediction"
        android:layout_below="@+id/buttonUpload"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textPrediction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="30dp"
        android:text="Predictions appear here!"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_below="@+id/buttonPredict"
        android:layout_centerHorizontal="true" />

</RelativeLayout>